    "/programs": {
      "get": {
        "tags": [
          "Faculty Service"
        ],
        "summary": "Получить список программ, с возможностью фильтрации",
        "parameters": [
          {
            "name": "faculty_name",
            "in": "query",
            "description": "Фильтрация по факультетам (выбор из всех, имеющихся в системе факультетов)",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "Филологический факультет",
                  "Высшая IT школа"
                ]
              }
            }
          },
          {
            "name": "education_level",
            "in": "query",
            "description": "Фильтрация по уровню образования",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "Основное общее образование",
                  "Среднее общее образование",
                  "Среднее профессиональное образование",
                  "Бакалавриат",
                  "Специалитет",
                  "Магистратура",
                  "Аспирантура"
                ]
              }
            }
          },
          {
            "name": "education_form",
            "in": "query",
            "description": "Фильтрация по форме обучения",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "Очная",
                "Заочная"
              ]
            }
          },
          {
            "name": "education_language",
            "in": "query",
            "description": "Фильтрация по языку обучения",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "Русский",
                "English"
              ]
            }
          },
          {
            "name": "program_name",
            "in": "query",
            "description": "Фильтрация по названию программы обучения",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешная операция",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProgramResponse"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
